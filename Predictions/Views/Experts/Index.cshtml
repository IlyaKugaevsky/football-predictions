@model Predictions.ViewModels.ResultsTableViewModel

@{
    ViewBag.Title = "Index";
}

<h1>Турнирная таблица</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @Html.AntiForgeryToken()
            <div class="panel panel-default">
                <div class="panel-body">
                    @using (Ajax.BeginForm("GetResultsTable", new AjaxOptions { UpdateTargetId = "results", InsertionMode = InsertionMode.Replace }))
                    {
                        @Html.ActionLink("Посмотреть расчеты", "PredictionsDisplay", "Predictions", new { selectedTourId = 1 }, new { @class = "btn btn-primary pull-left" })
                        <button class="btn btn-primary pull-right" type="submit">Показать</button>
                        @Html.DropDownListFor(model => model.SelectedTourId, Model.Tourlist, new
                           {
                               @class = "selectpicker pull-right",
                               data_style = "btn-primary",
                               data_width = "auto",
                               title = "Выбрать тур",
                               Name = "tourId"
                           })
                    }
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body" id="results">
                    @Html.PartialFor(m => m.ResultsTable, "ResultsTable")
                </div>
            </div>
        </div>
    </div>
</div>

<link href="//cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet" />
@section Scripts{
    <script src="//cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js"></script>
    <script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            var t = $('#resultsTable').DataTable({
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                }],
                "paging": false,
                "info": false,
                "filter": false,
                "order": [[5, "desc"]]
            });

            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        });
    </script>
}


